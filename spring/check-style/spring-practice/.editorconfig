# top-most EditorConfig file
root = true

[*]
# [encoding-utf8]
charset = utf-8

# [newline-lf]
end_of_line = lf

# [newline-eof]
insert_final_newline = true

[*.bat]
end_of_line = crlf

[*.{groovy,java,kt}]
# [indentation-tab]
indent_style = tab
indent_size = 4
continuation_indent_size = 8
tab_width = 4

# [no-trailing-spaces]
trim_trailing_whitespace = true

# [line-length-140]
max_line_length = 140
